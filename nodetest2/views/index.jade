extends layout

block content
  h1= title
  p Food Preferences

  // Wrapper
  #wrapper

    // USER INFO
    #userInfo
      h2 User Info
      p
        strong ID:
        | <input type='text' id='cust_id' /> 
        strong Name:
        |  <span id='userInfoName'></span>
        <br>
        strong Food Choice:
        |  <span id='userfoodItem'></span>
        
    // /USER INFO

    // USER LIST
    h2 User List
    #userList
      table
        thead
          th id
          th UserName
          th Food Choice
          th Delete?
        tbody
    // /USER LIST

    // ADD USER
    h2 Add User
    #addUser
      fieldset
        input#inputUserName(type='text', placeholder='Username')
        input#inputUserEmail(type='text', placeholder='Food Choice')
        br
        button#btnAddUser Add User
    // /ADD USER

  // /WRAPPER